<core:FragmentDefinition
	xmlns="sap.ui.comp.valuehelpdialog"
	xmlns:m="sap.m"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:core="sap.ui.core"
	>
	<ValueHelpDialog
		title="{i18n>recipeValueHelpTitle}"
		ok=".onRecipeVHOkPress"
		cancel=".onRecipeVHCancelPress"
		afterClose=".onValueHelpAfterClose"
		supportRanges="true"
		key="recipeUUID"
		descriptionKey="recipeDescription"
	>
		<filterBar>
			<fb:FilterBar advancedMode="true" search="onRecFilterBarSearch">
				<fb:filterGroupItems>
					<fb:FilterGroupItem
						groupName="recipeGroup"
						name="recipeUUID"
						label="Recipe ID"
						visibleInFilterBar="true"
					>
						<fb:control>
							<m:Input name="recipeUUID" />
						</fb:control>
					</fb:FilterGroupItem>
					<fb:FilterGroupItem
						groupName="recipeGroup"
						name="recipeDescription"
						label="{i18n>recipeName}"
						visibleInFilterBar="true"
					>
						<fb:control>
							<m:Input name="recipeDescription" />
						</fb:control>
					</fb:FilterGroupItem>

				</fb:filterGroupItems>
			</fb:FilterBar>
		</filterBar>
		
	</ValueHelpDialog>
</core:FragmentDefinition>
