<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<QuickView id="quickView" placement="Bottom">
		<QuickViewPage>
			<QuickViewGroup heading="{i18n>QuickViewTitle}">
				<QuickViewGroupElement label="{i18n>CreatedOn}"
					value="{ path: 'createdAt', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd.MM.yyyy' }}"/>
				<QuickViewGroupElement label="{i18n>CreatedBy}" type="link" value="{createdBy}"/>
				<QuickViewGroupElement label="{i18n>ChangedOn}"
					value="{ path: 'modifiedAt', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd.MM.yyyy' } }"/>
				<QuickViewGroupElement label="{i18n>ChangedBy}" type="link" value="{modifiedBy}"/>
			</QuickViewGroup>
		</QuickViewPage>
	</QuickView>
</core:FragmentDefinition>